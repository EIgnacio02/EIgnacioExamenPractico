@model ML.Libro
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Formulario Libro</h2>
    <div class="row">

        <div class="col-md-12">

            @using (Html.BeginForm("Form", "Libro", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="form-horizontal">

                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.IdLibro, new { @class = "hidden" })

                            @Html.TextBoxFor(model => model.IdLibro, new { @class = "hidden form-control" })

                            @Html.ValidationMessageFor(model => model.IdLibro)

                        </div>

                    </div>

                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.Nombre)

                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @id = "txtNombre" })

                            @Html.ValidationMessageFor(model => model.Nombre)

                        </div>

                    </div>
                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.NumeroPaginas)

                            @Html.TextBoxFor(model => model.NumeroPaginas, new { @class = "form-control" })


                        </div>

                    </div>
                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.FechaPublicacion)

                            @Html.TextBoxFor(model => model.FechaPublicacion, new { @class = "form-control" })

                            @Html.ValidationMessageFor(model => model.FechaPublicacion)

                        </div>

                    </div>
                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.Edicion)

                            @Html.TextBoxFor(model => model.Edicion, new { @class = "form-control" })

                            @Html.ValidationMessageFor(model => model.Edicion)

                        </div>

                    </div>

                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.Autor.IdAutor)

                            @Html.DropDownListFor(model => model.Autor.IdAutor, new SelectList(Model.Autor.Autores, "IdAutor", "NombreAutor"), "Selecciona un autor", new { @class = "form-control" })

                        </div>
                    </div>


                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.Genero.IdGenero)

                            @Html.DropDownListFor(model => model.Genero.IdGenero, new SelectList(Model.Genero.Generos, "IdGenero", "NombreGenero"), "Selecciona un genero", new { @class = "form-control" })

                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-3">

                            @Html.LabelFor(model => model.Editorial.IdEditorial)

                            @Html.DropDownListFor(model => model.Editorial.IdEditorial, new SelectList(Model.Editorial.Editoriales, "IdEditorial", "NombreEditorial"), "Selecciona un editorial", new { @class = "form-control" })

                        </div>
                    </div>


                    <div class="form-group">

                        <div class="col-md-3">

                            <input type="submit" value="Guardar" class="btn btn-success" />

                            @Html.ActionLink("Regresar", "GetAll", "Libro", htmlAttributes: new { @class = "btn btn-danger" })

                        </div>

                    </div>

                </div>

            }

        </div>

    </div>
</div>
