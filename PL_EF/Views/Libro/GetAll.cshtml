@model ML.Libro

@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h2>Libros</h2>

    <div class="row">
        <div style="float:right">
            @Html.ActionLink("Agregar", "Form", "Libro", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>

    <br />
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Editar</th>

                @*<th>Id libro</th>*@
                <th>Nombre</th>
                <th>Numero de paginas</th>
                <th>Fecha de publicacion</th>
                <th>Edicion</th>
                @*<th>Id autor</th>*@
                <th>Nombre del autor</th>
                @*<th>Id Genero</th>*@
                <th>Nombre del genero</th>
                @*<th>Id Editorial</th>*@
                <th>Nombre de la editorial</th>

                <th>Eliminar</th>

            </tr>
        </thead>
        <tbody>
            @foreach (ML.Libro libro in Model.Libros)
            {
                <tr>
                    <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Libro", new { IdLibro = libro.IdLibro})"></a></td>

                    @*<td>@libro.IdLibro</td>*@
                    <td>@libro.Nombre</td>
                    <td>@libro.NumeroPaginas</td>
                    <td>@libro.FechaPublicacion</td>
                    <td>@libro.Edicion</td>
                    @*<td>@libro.Autor.IdAutor</td>*@
                    <td>@libro.Autor.NombreAutor</td>
                    @*<td>@libro.Genero.IdGenero</td>*@
                    <td>@libro.Genero.NombreGenero</td>
                    @*<td>@libro.Editorial.IdEditorial</td>*@
                    <td>@libro.Editorial.NombreEditorial</td>


                    <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Libro", new { IdLibro = libro.IdLibro })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

